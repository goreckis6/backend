{
  "name": "morphy-backend",
  "version": "1.0.0",
  "description": "Backend API for Morphy file conversion service",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "db:test": "tsx scripts/db-setup.js test",
    "db:sync": "tsx scripts/db-setup.js sync",
    "db:seed": "tsx scripts/db-setup.js seed",
    "db:reset": "tsx scripts/db-setup.js reset",
    "db:status": "tsx scripts/db-setup.js status",
    "user:activate": "tsx scripts/activate-users.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "papaparse": "^5.4.1",
    "docx": "^8.5.0",
    "pptxgenjs": "^3.12.0",
    "xlsx": "^0.18.5",
    "mammoth": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/papaparse": "^5.3.14",
    "@types/cheerio": "^0.22.35",
    "@types/pg": "^8.10.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
